#include <iostream>
#include <fstream>
using namespace std;

int main()
{
    //housekeeping
	string filename;
	cout << "Enter filename for output, ending in .txt: ";
	getline(cin, filename);
	ofstream fout(filename);

	srand(time(0));
	for (int i = 0; i < 100; i++)
	{
		int value = rand() % 1000;
		fout << value << endl;
		cout << value << endl;
	}
	fout.close();

    return 0;
}







#include <iostream>
#include <iomanip>
#include <fstream>
using namespace std;

int main() 
{
    ifstream infile;
    ofstream outfile;
    string address, filename;
    infile.open("addresses.txt");
    outfile.open("myOutput.txt");
    if (!infile) {
        cout << "***ERROR opening file. Check and run again.\n";
        return 100;
    }
    while (getline(infile, address))
    {
        outfile << address << endl;
        
        getline(infile, address);
        outfile << address << endl;

        getline(infile, address);
        outfile << address << endl << endl;
    }
    cout << "Conversion complete.\n";
    outfile.close();
    infile.close();
    return 0;
}
