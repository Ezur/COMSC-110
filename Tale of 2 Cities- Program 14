#include <iostream>
#include <fstream>
using namespace std;

int main()
{
   //declarations
    ifstream fin("taleoftwocities.txt");
    string line;
    int counts[2][52] = {0,0};

    //initialize counts array
    //A-Z is first in array, ASCII 65-90
    //a-z is next in array, ASCII 97-122
    for (int i = 65; i <= 90; i++)
    {
        counts[0][i - 65] = i;
        counts[0][i - 39] = i + 32;
    }

    //process file
    while (getline(fin, line))
        for (unsigned int i = 0; i < line.length(); i++)
            for (int j = 0; j < 52; j++)
                if ((int) line[i] == counts[0][j])
                    counts[1][j]++;
    fin.close();

    //output results
    cout << "Story analysis complete. Results:\n";
    for (int i = 0; i < 26; i++)
        cout << (char) (i + 65) << ": " << counts[1][i] << "\t"
             << (char) (i + 97) << ": " << counts[1][i + 26] << endl;

    return 0;
}
